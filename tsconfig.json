{
    "compilerOptions": {
        "baseUrl": "./src",
        "module": "commonjs",
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "preserveConstEnums": true,
        "removeComments": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "target": "ES6",
        "lib": ["es2016", "dom"],
    },

    "include": [
        "./src/**/*.ts",
        "./src/**/*.d.ts"
    ]
}